<?xml version="1.0" encoding="utf-8"?>
<!--  https://stackoverflow.com/questions/6054562/how-to-make-the-corners-of-a-button-round
      https://www.zoftino.com/android-button -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="#FF6600" />
            <gradient android:angle="-90" android:startColor="#FF944D" android:endColor="#B34700"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="#FF6600" />
            <solid android:color="#FF6600"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="#FF6600" />
            <gradient android:angle="-90" android:startColor="#FF944D" android:endColor="#FF6600" />
        </shape>
    </item>
</selector>