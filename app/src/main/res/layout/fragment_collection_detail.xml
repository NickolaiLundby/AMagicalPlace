<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dialogBackground"
    android:padding="15dp">

    <!-- Date -->
    <TableRow>
        <TextView
            android:id="@+id/collection_detail_tv_hardcoded_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/collection_detail_tv_date"
            android:layout_height="wrap_content"
            android:layout_width="280dp"
            android:textColor="@color/colorWhite"
            android:text="Placeholder"
            android:backgroundTint="@color/colorWhite" />
    </TableRow>

    <!-- Value -->
    <TableRow>
        <TextView
            android:id="@+id/collection_detail_tv_hardcoded_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Value:" />
        <TextView
            android:id="@+id/collection_detail_tv_value"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Placeholder"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"/>
    </TableRow>

    <!-- Buttons -->
    <TableRow>

        <Button
            android:id="@+id/collection_detail_btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_cancel"
            android:text="Back"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/collection_detail_btn_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_add"
            android:text="Update"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>
    </TableRow>
</TableLayout>

